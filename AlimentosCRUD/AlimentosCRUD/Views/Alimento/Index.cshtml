@model List<AlimentosCRUD.Models.Alimento>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title></title>
</head>
<body>
    <div class="container mt-2">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <th scope="row">@a.Id</th>
                        <td>@a.Nombre</td>
                        <td>@a.Precio</td>
                        <td>
                            <a href="/Alimento/Modificar/@a.Id">Modificar</a>
                            <a href="/Alimento/Eliminar/@a.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

